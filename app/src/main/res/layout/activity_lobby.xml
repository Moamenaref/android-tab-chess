<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <FrameLayout
            android:id="@+id/fragment_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#000000"
            tools:layout_height="240dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/fragment_container"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">


                    <TextView
                        android:id="@+id/random_button"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_margin="8dp"
                        android:layout_weight="1"
                        android:background="#5359b8"
                        android:gravity="center"
                        android:text="MATCH\nRANDOM"
                        android:textColor="#FFFFFF"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/find_friend_button"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_margin="8dp"
                        android:layout_weight="1"
                        android:background="#39cccccc"
                        android:gravity="center"
                        android:text="FIND\nFRIEND"
                        android:textColor="#6c6b6b"
                        android:textSize="20sp"
                        android:textStyle="bold" />


                    <View
                        android:id="@+id/play_current"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_margin="8dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textColor="#FFFFFF"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        tools:visibility="visible" />


                </LinearLayout>


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ListView
                            android:id="@+id/active_listview"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginBottom="4dp"
                            android:background="#FFFFFF"
                            android:clipToPadding="false"
                            android:paddingTop="36dp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="#c231e850"
                            android:gravity="center"
                            android:padding="8dp"
                            android:text="ACTIVE GAMES" />

                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>


        <!-- make username! -->
        <LinearLayout
            android:id="@+id/username_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#5b96a6"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="gone">

            <EditText
                android:id="@+id/username_edittext"
                android:layout_width="200dp"
                android:textSize="24dp"
                android:paddingBottom="8dp"
                android:maxLength="16"
                android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz1234567890"
                android:inputType="textFilter"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:layout_marginBottom="16dp"/>

            <TextView
                android:id="@+id/set_username"
                android:text="SET USERNAME"
                android:textStyle="bold"
                android:textAlignment="center"
                android:padding="8dp"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:background="#5ed465" />


        </LinearLayout>
    </RelativeLayout>

</LinearLayout>
